<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">

<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<script type="text/javascript">

  
	function validatePassword()   
   {
		 if(document.changePassword.oldpwd.value==null ||document.changePassword.oldpwd.value == ''){
				alert('Old Password cannot be Empty');
				return false;
		 }
		 if(document.changePassword.newpwd1.value==null ||document.changePassword.newpwd1.value == ''){
				alert('New Password cannot be blank');
				return false;
		} 
		if(document.changePassword.newpwd2.value==null ||document.changePassword.newpwd2.value == ''){
				alert('Please Re-enter new Password');
				return false;
		} 
		if(document.changePassword.newpwd1.value!=document.changePassword.newpwd2.value){
				alert('New entered and re-entered password should be equal');
				return false;
		} 
    }
</script>

<title>Video Library</title>

<link href="/stylesheets/templatemo_style.css" rel="stylesheet" type="text/css" />

</head>

<body>
	<div id="templatemo_background_section_top">
    
    	<div class="templatemo_container">
		
        	<div id="templatemo_header">
				<div id="templatemo_logo_section">            
		        	<h1><a href="/">Video Library</a></h1>            
					<h2>Store for all movies: Comedy, Thriller, Action, Romantic, Documentary</h2>
				</div>
				<div id="templatemo_user_section">            
		        	Welcome <a href="/user/<%= userDet.userId%>?nocache=1"><%= userDet.firstname %></a>!!
		        	<a href="/sign-out?nocache=1">Sign Out</a>	
				</div>
         	</div><!-- end of headder -->
            <div id="templatemo_menu_panel"> 
				<div id="templatemo_menu_section">
					
					<ul>
						   
					  <li><a href="/">Home    </a></li>
					  <li><a href="/viewusermovies?nocache=1">View Movies   </a></li>
					  <li><a href="/changepassword?nocache=1">Change Password   </a></li>
					  <li><a href="/user/<%= userDet.userId%>?nocache=1">My Account</a></li>
					</ul> 
						
				</div>
           </div> <!-- end of menu -->
		</div><!-- end of container-->
        
	</div><!-- end of templatemo_background_section_top-->
    
    <div id="templatemo_background_section_middle">
    
    	<div class="templatemo_container">
        
        	<div id="templatemo_left_section">
            	
                <div class="templatemo_post">
                
                	<div class="templatemo_post_top">
                    	<h1>Change Password</h1>
                    </div>
                    <div class="templatemo_post_mid">
                    	<form action="/changepassword-submit" onsubmit="return validatePassword()" method="post" name="changePassword">   
                    	<div style="color:yellow; font-weight:bold;" align="center">
				<% if(editResults != null) {%>
				<%= editResults %>
				<% } %>
				</div>
				<br/>                 
                        <table><tbody>                        
							<tr>
								<td><label for="oldpwd">Old Password*: </label> </td>
								<td><input id="oldpwd" maxlength="75" name="oldpwd" type="password"/></td>
							</tr>
							<tr>
								<td><label for="newpwd1">New Password*: </label> </td>
								<td><input id="newpwd1" maxlength="75" name="newpwd1" type="password"/></td>
							</tr>
							<tr>
								<td><label for="newpwd2">Re-enter New Password*: </label> </td>
								<td><input id="newpwd2" maxlength="75" name="newpwd2" type="password"/></td>
							</tr>
						</tbody></table>
						
						<br/>
						<div><input name="Submit" type="submit" value="Submit" style="width:70px; align:right; margin-left:80px"/>
						<!--<input type="button" value="Reset" style="width:70px; align:right;"/>--></div>
						</form>
                        <div class="clear"></div>
                        
                    </div>
                    <div class="templatemo_post_bottom">
                    
                    
                    </div>
                    
				</div><!-- end of templatemo_post-->
                
            </div><!-- end of left section-->
            
            
        </div><!-- end of container-->
	</div><!-- end of background middle-->
    
     
</body>

